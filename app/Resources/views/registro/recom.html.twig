{% extends 'base.html.twig' %}

{% block body %}
<div class="container">

    <div class="page-header">
        <h1>
            XVIII Escuela de Otoño de Biología Matemática<br>
            XII Encuentro Nacional de Biología Matemática
        </h1>
    </div>

    <div class="alert alert-dismissable alert-warning">
        Recomendación para el estudiante <strong>{{ registro.nombre|title }}  {{ registro.paterno|title }} {{ registro.materno|title }}</strong>
    </div>

    {{ form_start(edit_form) }}
    <div class="row">
        <div class="col-md-12" >
            <div class="text-muted">Por faver escriba su recomendación en la siguiente área de texto:</div>
            <div>{{ form_widget(edit_form.recomendacion, {'attr': {'class': 'form-control', 'rows': '5'}} ) }}</div>
            <div>{{ form_errors(edit_form.recomendacion) }}</div><br>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-12 col-lg-offset-5">
            <input type="submit" value="Enviar"  class="btn btn-primary"/>
            {{ form_end(edit_form) }}
        </div>
    </div>
    {{ form_widget(edit_form) }}
    {{ form_end(edit_form) }}
</div>
{% endblock %}